// Calendar class
class Calendar {
constructor() {
this.reminders = [];
this.currentMonth = new Date().getMonth();
this.currentYear = new Date().getFullYear();
}

addReminder(reminder) {
if (this.reminders.some((r) => r.event === reminder.event && r.date === reminder.date)) {
alert('Reminder already exists!');
} else {
this.reminders.push(reminder);
alert('Reminder added successfully!');
}
}

removeReminder(reminder) {
const index = this.reminders.indexOf(reminder);
if (index !== -1) {
this.reminders.splice(index, 1);
alert('Reminder removed successfully!');
}
}

displayCalendar() {
// code to display calendar table
}

nextMonth() {
// code to go to next month
}

previousMonth() {
// code to go to previous month
}
}

// Sound class
class Sound {
playSound() {
const audio = document.getElementById('reminderSound');
audio.src = 'reminder-sound.mp3';
audio.play();
}
}

// Create Calendar instance
